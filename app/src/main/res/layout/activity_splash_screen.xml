<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.marcelo.recetasdecocina.SplashScreenActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="84dp"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_fileName="soda_loader.json"
        app:lottie_loop="false"
        app:lottie_autoPlay="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:src="@drawable/cheff"
        android:layout_above="@+id/nombre_splash"
        android:layout_marginBottom="80dp"/>

    <TextView
        android:id="@+id/nombre_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="36sp"
        android:textStyle="italic"
        android:textColor="#ecebeb"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="148dp"/>

    <View
        android:id="@+id/reveal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:visibility="invisible"/>

</RelativeLayout>
